<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.PowerpuffGirls_TI2.sportcourt">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportCourt">
        <activity
            android:name=".ui.transaksi.DetailTransaksiActivity"
            android:theme="@style/Theme.SportCourt.NoActionBar.Detail" />
        <activity android:name=".ui.booking.EditBookingActivity" />
        <activity android:name=".ui.detail.MapsDetailActivity" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:theme="@style/Theme.SportCourt.NoActionBar.Detail" />
        <activity
            android:name=".ui.booking.DetailBookingActivity"
            android:theme="@style/Theme.SportCourt.NoActionBar.Detail" />
        <activity android:name=".ui.booking.BookingActivity" />
        <activity android:name=".ui.setting.SettingActivity" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:theme="@style/Theme.SportCourt.NoActionBar.Detail" />

        <receiver android:name=".broadcast.NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.SportCourt.NoActionBar.Detail">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SportCourt.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>